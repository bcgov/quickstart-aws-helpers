# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values
# cp terraform.tfvars.example terraform.tfvars

# REQUIRED VARIABLES
# These must be set for the deployment to work

# GitHub repository in format owner/repo-name
repo_name = "owner/repo-name"

# Your 12-digit AWS account number
aws_account_number = "123456789012"

# Your 6-character AWS license plate
aws_license_plate = "abc123"

# Target environment: dev, test, or prod
target_env = "dev"

# OPTIONAL VARIABLES
# These have sensible defaults but can be customized

# AWS region for resource deployment
aws_region = "ca-central-1"

# IAM policy name for Terraform deployment permissions
policy_name = "TerraformDeployPolicy"

# IAM role name for GitHub Actions
role_name = "GHA_CI_CD"

# ECR repository name (defaults to repo_name if empty)
ecr_repo_name = ""

# Enable automatic GitHub environment and secrets creation
# Set to true to have Terraform create GitHub environments and secrets automatically
# Requires GITHUB_TOKEN environment variable to be set
enable_github_automation = false

# Common tags applied to all resources
common_tags = {
  Owner        = "your-team"
  Environment  = "dev"
  Project      = "your-project"
  CostCenter   = "your-cost-center"
  Department   = "your-department"
}
